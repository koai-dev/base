<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_play">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_pause"
            android:layout_width="@dimen/_94sdp"
            android:layout_height="@dimen/_47sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:src="@drawable/ic_pause"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_diamond"
            android:layout_width="@dimen/_121sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/bg_crown"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/text_view_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/super_corn"
                android:text="5"
                android:textColor="#42C0FB"
                android:textSize="@dimen/_28ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ic_diamond"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:src="@drawable/ic_diamond"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_diamond"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_view_diamond"
                app:layout_constraintTop_toTopOf="@+id/text_view_diamond" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="@dimen/_119sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_70sdp"
            android:background="@drawable/bg_crown"
            app:layout_constraintBottom_toBottomOf="@+id/image_pause"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_pause">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/super_corn"
                android:text="15"
                android:textColor="#42C0FB"
                android:textSize="@dimen/_28ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView4"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:src="@drawable/ic_crown"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_cup"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/ic_cup"
            app:layout_constraintEnd_toEndOf="@+id/image_pause"
            app:layout_constraintStart_toStartOf="@+id/image_pause"
            app:layout_constraintTop_toBottomOf="@+id/image_pause" />

        <TextView
            android:id="@+id/text_view_question"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_81sdp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@drawable/bg_text_view"
            android:fontFamily="@font/super_corn"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_35ssp"
            app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/ic_cup"/>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_clock"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:src="@drawable/ic_clock"
            app:layout_constraintBottom_toBottomOf="@+id/ic_cup"
            app:layout_constraintEnd_toEndOf="parent" />

        <GridLayout
            android:id="@+id/layout_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:columnCount="7"
            android:rowCount="4"
            app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@id/text_view_question"
            tools:layout_editor_absoluteX="19dp">


        </GridLayout>
        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/_360sdp"
            android:layout_height="@dimen/_64sdp"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/_100sdp"
            android:background="@drawable/bg_word"
            android:clickable="false"
            android:focusable="false"
            android:inputType="textNoSuggestions"
            android:fontFamily="@font/super_corn"
            android:gravity="bottom|center_horizontal"
            android:textColor="#42C0FB"
            android:textSize="@dimen/_25ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:id="@+id/layout_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:columnCount="7"
            android:rowCount="4"
            app:layout_constraintTop_toBottomOf="@id/editText">


        </GridLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_tips"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginBottom="@dimen/_72sdp"
            android:src="@drawable/ic_tip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/roundedTips" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>